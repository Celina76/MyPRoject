<?xml version="1.0" encoding="UTF-8"?>

<beans
	xsi:schemaLocation=" http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd"
	xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context" xmlns="http://www.springframework.org/schema/beans">



	<bean class="org.apache.commons.dbcp.BasicDataSource" id="dataSource">

		<property value="org.h2.Driver" name="driverClassName" />

		<property value="jdbc:h2:tcp://localhost/~/test" name="url" />

		<property value="sa" name="username" />

		<property value="sa" name="password" />

	</bean>

	<context:component-scan base-package="com.niit.*">
	</context:component-scan>



	<bean class="org.springframework.orm.hibernate4.LocalSessionFactoryBean"
		id="sessionFactory">

		<property name="dataSource" ref="dataSource" />
		
		<property name="annotatedClasses">


			
			<list>

				<value>com.niit.model.UserInfo</value>

				<value>com.niit.model.UserRole</value>

				<value>com.niit.model.ProductInfo</value>

				<value>com.niit.model.CategoryInfo</value>

				<value>com.niit.model.Cart</value>

				<value>com.niit.model.CartItems</value>

				<value>com.niit.model.Shipping</value>

				<value>com.niit.model.Orders</value>

			</list>

		</property>


		
		<property name="hibernateProperties">


			
			<props>

				<prop key="hibernate.dialect">org.hibernate.dialect.H2Dialect</prop>

				<prop key="hibernate.hbm2ddl.auto">update</prop>

				<prop key="hibernate.show_sql">true</prop>

			</props>

		</property>

	</bean>


	
	<bean class="org.springframework.orm.hibernate4.HibernateTransactionManager"
		id="transactionManager">

		<property name="sessionFactory" ref="sessionFactory" />

	</bean>

	<!-- <mapping name="com.niit.domain.UserInfo"></mapping> -->


</beans>